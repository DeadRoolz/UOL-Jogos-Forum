<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/main_container"
    android:layout_height="fill_parent"
	android:orientation="vertical">
    
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
	android:orientation="vertical">
    
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/RatingTopicContainer"
    >
    
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="ratingContainerClickListener"
	android:orientation="horizontal"
    android:layout_marginTop="8dp">
    
    
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
    android:layout_weight="1"
    android:gravity="right"
    android:id="@+id/RatingTopicEstrelas">
   
    <ImageView
            android:id="@+id/imageView_Estrela1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_border_black_24dp" />
    <ImageView
            android:id="@+id/imageView_Estrela2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_border_black_24dp" />
    <ImageView
            android:id="@+id/imageView_Estrela3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_border_black_24dp" />
    <ImageView
            android:id="@+id/imageView_Estrela4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_border_black_24dp" />
    <ImageView
            android:id="@+id/imageView_Estrela5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_border_black_24dp" />
   
   </LinearLayout>
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
    android:id="@+id/RatingTopicNumVotos"
    android:layout_weight="1"
   >
   
   <TextView
		android:id="@+id/NumVotos"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12dp"
        android:text="0 votos"
        android:layout_marginLeft="8dp"
		android:gravity="center_vertical"
        android:textColor="@color/post_secondary_text_color"
   />
   
   </LinearLayout>
    
    
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:background="#d7d7d7" />
    
    </LinearLayout>
    
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal">
		
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minHeight="72dp"
    android:layout_height="wrap_content"
    android:id="@+id/TopicHeader"
    android:layout_margin="16dp"
	android:orientation="horizontal">
	   <ImageView
		android:id="@+id/Avatar"
		android:layout_width="70dp"
		android:layout_height="70dp"
        android:src="@drawable/nopic"
        android:layout_alignParentTop="true"
   />
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="vertical">
   <TextView
		android:id="@+id/txtAutor"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="@color/post_primary_text_color"
        android:textStyle="bold"
   />
   <TextView
		android:id="@+id/txtNumMensagens"
		android:layout_width="wrap_content"
        android:text="Mensagens: 203"
        android:textSize="13dp"
		android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/post_secondary_text_color"
   />
   <TextView
		android:id="@+id/txtCadastro"

		android:layout_width="wrap_content"
        android:textSize="13dp"
		android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/post_secondary_text_color"
   />
   </LinearLayout>
   </LinearLayout>
   <TextView
		android:id="@+id/txtRating"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="right"
		android:textAlignment="gravity"
   />
	</RelativeLayout>
	
    
    
    
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:layout_marginTop="16dp"
	android:minHeight="90dp"
	android:id="@+id/PostContainer">
    
    
   <TextView
		android:id="@+id/Post"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="19dp"
        android:layout_margin="14dp"
		android:gravity="center_vertical"
        android:textColor="@color/post_primary_text_color"
   />
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/DataPostContainer"
	android:orientation="horizontal">
   <TextView
		android:id="@+id/txtDataPostagem"

		android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="13dp"
		android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:textColor="@color/post_secondary_text_color"/>
   </RelativeLayout>
   
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:layout_margin="8dp"
	android:id="@+id/AssinaturaContainer">
    
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:src="@drawable/dotted"
    android:layerType="software" />
    
    <TextView

		android:layout_width="wrap_content"
        android:textSize="13dp"
        android:text="Assinatura"
		android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textColor="#9c75e5"/>
        
        <TextView

		android:layout_width="wrap_content"
        android:textSize="13dp"
        android:id="@+id/txtAssinatura"
		android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textColor="@color/post_primary_text_color"/>
    
    </LinearLayout>
   
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:layout_margin="8dp">
   <ImageView
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:src="@drawable/dotted"
    android:layerType="software" />
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:id="@+id/UserInteractContainer">
    
    
    <ImageView
            android:id="@+id/imageView_thumb_up"
            android:layout_weight="1.00"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:src="@drawable/ic_thumb_up_black_24dp" />
    
    <ImageView
            android:id="@+id/imageView_thumb_down"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_margin="8dp"
            android:layout_weight="1.00"
            android:src="@drawable/ic_thumb_down_black_24dp" />
    
    <ImageView
            android:id="@+id/imageView_quote"
            android:layout_weight="1.00"
            android:layout_width="24dp"
            android:layout_margin="8dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_format_quote_black_24dp" />
   
   

    
    <ImageView
            android:id="@+id/imageView_MP"
            android:layout_weight="1.00"
            android:layout_width="24dp"
            android:layout_margin="8dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email_black_24dp" />
            
    <ImageView
            android:id="@+id/imageView_Edit"
            android:layout_weight="1.00"
            android:layout_width="24dp"
            android:layout_margin="8dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_create_black_24dp" />
   
    </LinearLayout>
    
    </LinearLayout>
   </LinearLayout>

   
</LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>
